{%- from 'consul/map.jinja' import template_settings with context -%}
[Unit]
Description=Consul Template
Wants=basic.target
After=basic.target network.target

[Service]
User=consul
Group=consul
ExecStart=/usr/local/bin/consul agent {% for key, value in template_settings.get("opts").iteritems() -%} 
{% if value is none %}-{{ key }} {% else -%}
{% for opt in value %}-{{ key }}={{ opt }} {% endfor %}{% endif -%}
{% endfor %}

ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -INT $MAINPID
KillMode=process
Environment=GOMAXPROCS={{ salt['grains.get']('num_cpus') }}

[Install]
WantedBy=multi-user.target
